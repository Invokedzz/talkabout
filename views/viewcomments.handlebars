

<link rel="stylesheet" href="/css/website.css">

<section>
    <div class="chatblock">    
        <div class="box">
            {{> partials}}

            {{#each rows}}

              <div class="comment">
                    <p>{{comments}}</p>

                    <form action="/editcomment/{{comment}}" method="GET">
                    
                    <button type="submit">Edit</button>

                    </form>

                    <form action="/deletecomment/{{comment}}" method="POST">

                        <input type="hidden" name="commentid" value="{{comment}}">
                        <button type="submit" class="delete">Delete</button>

                    </form>

                </div>

                {{/each}}

        </div>
    </div>
</section>
