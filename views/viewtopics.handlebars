

    <link rel="stylesheet" href="/css/website.css">

<section>
        <div class="chatblock">    
            <div class="box">
                {{> partials}}

                {{#each topics}}

                <h2>{{title}}</h2>

                <p>{{theme}}</p>

                <p>{{text}}</p>

                <a href="/comment/{{id}}">Comment</a>

                <a href="/seecomments/{{id}}">See comments</a>

                <form action="/deletetopic/{{id}}" method="POST">
                <button type="submit" class="delete">Delete</button>
                </form>

                {{else}}

                <h2>No topics found.</h2>

                {{/each}}

            </div>
        </div>
</section>