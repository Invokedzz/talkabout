<link rel="stylesheet" href="/css/website.css">

<section>
        <div class="chatblock">    
            <div class="box">
                {{> partials}}
                <h2>Add a New Topic</h2>
                <form action="/editedcomments/{{topicid}}" method="POST" class="topic-form">
                    <div class="form-group">
                    
                    {{#each rows}}
                    
                    <div class="form-group">
                        <label for="commentary">Create commentary: </label>
                        <textarea name="comment" rows="4" required>{{comments}}</textarea>
                    </div>
                    
                    <input type="hidden" name="topicid" value="{{id}}">

                    <button type="submit">Send</button>

                    {{/each}}
                </form>

            </div>
    </section>